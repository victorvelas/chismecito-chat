{% extends "Layouts/base.njk" %}

{% block title %}{{ appName }}{% endblock %}

{% block css %}
    <link rel="stylesheet" href="styles/modal.css">
{% endblock %}

{% block content %}
    {% include "modal.njk" %}
    <div class="chat-container">
        <aside class="sidebar">
            <h2>Contactos</h2>
            <ul class="contact-list">
                {# <li class="contact active">Juan Pérez</li>
                <li class="contact">Ana López</li>
                <li class="contact">Carlos Ruiz</li>
                <li class="contact">Lucía Torres</li> #}
            </ul>
        </aside>
        <main class="chat-area">
            <header class="chat-header">
                <h2>{{ appName }}</h2>
            </header>
            <div class="messages" id="messages-box">
            </div>
            <footer class="chat-input">
                <form id="frm-chat">
                    <input type="text" placeholder="Escribe un mensaje...">
                    {% if true %}
                        <button>Enviar</button>
                    {% endif %}
                    <div id="previewContainer" style="display:none;" class="padding-top-12">
                    </div>
                </form>
            </footer>
        </main>
    </div>
    <template id="template-preview">
        <img class="preview-img" onclick="PM.openImg(this)" style="max-width: 75px; max-height: 75px;" />
    </template>
{% endblock %}

{% block js %}
    <script type="text/javascript" src="javascript/socket-io.client.js"></script>
    <script type="text/javascript" src="javascript/main.js"></script>
    <script type="text/javascript" src="javascript/modal.js"></script>
{% endblock %}